@model MeetInfo

@{
    ViewBag.Title
    = "Başvuru Bilgisi";
}


<h1 class="h4">@ViewData["IndexText"]</h1>
<p>Toplantı katılım durumunuzu bildiriniz</p>
<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            @Model.Location
        </li>
        <li class="list-group-item">
            @Model.Date.ToString("dd/MM/yyyy HH:mm")
        </li>
        <li class="list-group-item">
            @Model.NumberOfPeople kişi katılacak
        </li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru yap</a>