@model UserInfo

@{
    ViewBag.Title
    = "Başvuru Durumu";

}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>

    @if (Model.WillAttend == true)
    {

        <p>Teşekkürler @Model.Name, toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor</p>

        <a class="btn btn-primary" href="/Meeting/List">Katılımcıları görüntüle</a>
    }
    else
    {
        <p>@Model.Name, katılmadığınızdan dolayı üzgünüm</p>
        <a class="btn btn-primary" href="/meeting/apply">Forma Geri Dön</a>
    }




</main>