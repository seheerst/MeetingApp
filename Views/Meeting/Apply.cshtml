@model UserInfo
@{
    ViewBag.Title = "Başvuru Formu";
}

<h1 class="h4 text-center">Toplantı katılım formu</h1>
<form method="post" action="/Meeting/Apply" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 text-center">
        <label asp-for="Name" class="form-label"> Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3 text-center">
        <label asp-for="Phone" class="form-label"> Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3 text-center">
        <label asp-for="Email" class="form-label"> Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="mb-3 text-center">
        <label asp-for="WillAttend" class="form-label"> will you join?</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Select</option>
            <option value="true">Yes, I do</option>
            <option value="false">No, I dont</option>
        </select>
    </div>
    <div class="col text-center">
        <button class="btn btn-primary " type="submit">Kaydet
        </button>
    </div>
</form>